//Develop a C program to create student structure, read two student details( Student roll number, name, section, department, fees, and results i.e., total marks obtained) and print the student details who has scored the highest.
#include <stdio.h>

typedef struct student
{
    int rollno;
    char  name[20];
    char section[2];
    char department[20];
    float fees;
    float total_marks;
}s;

static int main()
{
    struct  student s[2];
    printf("*********Student details*******\n");
    for(int i=0;i<2;i++)
    {
        printf("\n*********Student %d details*******\n",i+1);
        printf("\nRoll no : ");
        scanf("%d",&s[i].rollno);
        printf("Name : ");
        scanf("%s",s[i].name);
        printf("Section : ");
        scanf("%s",s[i].section);
        printf("Department : ");
        scanf("%s182",s[i].department);
        printf("Fees : ");
        scanf("%f",&s[i].fees);
        printf("Total_marks : ");
        scanf("%f",&s[i].total_marks);

    }
    printf("\n**************************");
    if(s[0].total_marks>s[1].total_marks)
    {
        printf("\nStudent details who has scored the   highest marks\n");
        printf("\nRoll number: %d\n",s[0].rollno);
        printf("Name: %s\n",s[0].name);
        printf("Section: %.2s\n",s[0].section);
        printf("Department: %s\n",s[0].department);
        printf("Fees: %f\n",s[0].fees);
        printf("Results: %f",s[0].total_marks);
    }
    else
    {
        printf("\nStudent details who has scored the highest marks\n");
        printf("\nRoll number: %d\n",s[1].rollno);
        printf("Name: %s\n",s[1].name);
        printf("Section: %.2s\n",s[1].section);
        printf("Department: %s\n",s[1].department);
        printf("Fees: %f\n",s[1].fees);
        printf("Results: %f",s[1].total_marks);
    }
    return 0;
}
