// Develop a program to perform addition of two Matrices.
#include<stdio.h>

int main()
{
    int i,j;
    int row1,row2,col1,col2,row_sum,col_sum;
    int A[5][5], B[5][5], C[5][5];
    
    printf("\n Enter the number of rows and colums in first matrix : ");
    scanf("%d %d",&row1,&col1);
    
    printf("\n Enter the number of rows and colums in second matrix : ");
    scanf("%d %d",&row2,&col2);
    
    if(row1!=row2 || col1!=col2)
    {
     printf("\n The number of rows and columns of both the matrices must be equal");
    }
    row_sum = row1;
    col_sum = col1;
    
    printf("\n Enter the elements of the first matrix : ");
    for(i=0;i<row1;i++)
    {
      for(j=0;j<col1;j++)
        scanf("%d",&A[i][j]);
    }
    
    printf("\n Enter the elements of the second matrix : ");
    for(i=0;i<row2;i++)
    {
      for(j=0;j<col2;j++)
        scanf(" %d",&B[i][j]);
    }
    
    for(i=0;i<row_sum;i++)
    {
       for(j=0;j<col_sum;j++)
       C[i][j] = A[i][j] + B[i][j];
    }
    printf("\n The elements of the first matrix are");
    
    for(i=0;i<row1;i++)
    {
     printf("\n \n");
     for(j=0;j<col1;j++)
     printf("\t %d",A[i][j]);
    }
    
    printf("\n\nThe elements of the second matrix are");
    
    for(i=0;i<row2;i++)
    {
     printf("\n \n");
     for(j=0;j<col2;j++)
     printf("\t %d",B[i][j]);
    }
    
    printf("\n\n The elements of the resultant matrix are");
    
    for(i=0;i<row_sum;i++)
    {
     printf("\n \n");
     for(j=0;j<col_sum;j++)
     printf("\t %d",C[i][j]);
    }
    
  return 0;
}
