#include<stdio.h>
#include<conio.h>
#include<math.h>
float area_of_triangle(int a , int b,int c);
int main()
{
    int a,b,c;
    printf("\n Enter the lengths of the three sides of the triangle : ");
    scanf("%d %d %d", &a,&b,&c);
    area_of_triangle(a,b,c);
    return 0;
}
float area_of_triangle(int a ,int b,int c)
{
    float s,area;
    s = (a + b + c)/2.0;
    area = sqrt(s*(s-a)*(s-b)*(s-c));
    printf("\n Area = %f" , area);
    return area;
}
