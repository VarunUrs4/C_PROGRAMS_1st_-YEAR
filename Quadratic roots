include<stdio.h>
#include<math.h>
int roots(int a,int b,int c,float D,float d, float x1, float x2);
void main()
{
    int a ,b ,c;
    float D ,d ,x1 ,x2;
    printf("\n Enter the values of a,b and c :\n");
    scanf("%d %d %d", &a ,&b ,&c);
    roots(a,b,c,D,d,x1,x2);
    return 0;
 }
int roots(int a,int b,int c,float D,float d, float x1, float x2)

 {

    D = (b * b) - (4 * a * c);
    d = 2 * a;
    if(D > 0)
    {
      printf("\n REAL ROOTS");
      x1 = (-b + sqrt(D))/d;
      x2 = (-b - sqrt(D))/d;
      printf("\n x1 = %f \t x2 = %f", x1 ,x2);
    }
    else if(D==0)
    {
      printf("\n EQUAL ROOTS");
      x1 = -b/d;
      printf("\n x1 = %f \t x2 = %f", x1 ,x1);
    }
    else
      printf("\n IMAGINARY ROOTS");
 return 0;
}
